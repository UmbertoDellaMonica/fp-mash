{
	"$schema": "http://json-schema.org/schema#",
	"type": "object",
	"required": [
		"schema",
		"kmerSize",
		"alphabet",
		"preserveCase",
		"canonical",
		"sketchSize",
		"hashType",
		"hashBits",
		"hashSeed"
	],
	"properties": {
		"schema": {
			"type": "string"
		},
		"kmerSize": {
			"type": "number"
		},
		"alphabet": {
			"type": "string"
		},
		"preserveCase": {
			"type": "boolean"
		},
		"canonical": {
			"type": "boolean"
		},
		"sketchSize": {
			"type": "number"
		},
		"hashType": {
			"type": "string"
		},
		"hashBits": {
			"type": "number"
		},
		"hashSeed": {
			"type": ["number", "null"]
		},
		"sketches": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [
					"id",
					"name",
					"hashes",
					"subSketches" // Aggiunta della nuova proprietà
				],
				"properties": {
					"id": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"seqLength": {
						"type": "number"
					},
					"comment": {
						"type": "string"
					},
					"numValidKmers": {
						"type": "number"
					},
					"filters": {
						"type": "object",
						"properties": {
							"minCopies": {
								"type": "number"
							}
						}
					},
					"hashes": {
						"type": "array",
						"uniqueItems": true,
						"items": {
							"type": "string",
							"pattern": "^[0-9]+$"
						}
					},
					"kmers": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"counts": {
						"type": "array",
						"items": {
							"type": "number"
						}
					},
					"subSketches": {
						"type": "array",
						"items": {
							"type": "object",
							"required": [
								"id",
								"hashes" // Proprietà necessarie per i sub-sketch
							],
							"properties": {
								"id": {
									"type": "string"
								},
								"hashes": {
									"type": "array",
									"uniqueItems": true,
									"items": {
										"type": "string",
										"pattern": "^[0-9]+$"
									}
								}
								// Aggiungi altre proprietà specifiche per i sub-sketch, se necessario
							}
						}
					}
				}
			}
		}
	}
}
